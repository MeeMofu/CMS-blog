<div class="row justify-content-center ">
    <div class="col-5 mt-5">
        <div class="card">
            <h5 class="card-header  bg-secondary text-light">Login</h5>
            <div class="card-body">
                 <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <form id="form-input">
                            <div class="form-group ">
                                <input type="username" class="form-control" id="username" placeholder="Enter your username">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="password" placeholder="Password">
                            </div>
                            <div class="alert alert-danger" id="alert" role="alert" style="display: none;">
                                Incorrect password
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Submit</button>
                        </form>
                    </li>
                    <li class="list-group-item">
                        <div class="row justify-content-center text-decoration-none">
                            <a href="/signup"><button class="btn btn-success">Create new account</button></a>
                        </div>
                    </li>
                </ul>
                

            </div>
        </div>
</div>

<script src="/javascript/login.js"></script>